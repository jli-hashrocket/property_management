<%= form_for(@building) do |f| %>
<% if @building.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@building.errors.count, "error") %> occured: </h2>

    <ul>
    <% @building.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :address %><br>
  <%= f.text_field :address %>
  <br>
  <%= f.label :city %><br>
  <%= f.text_field :city %><br>
  <br>
  <%= f.label :state %><br>
  <%= f.select :state, collection: Building::STATES, include_blank: '' %><br>
  <br>
  <%= f.label :zip %><br>
  <%= f.text_field :zip %><br>
  <br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <br>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>

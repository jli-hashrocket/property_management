<table cellpadding=0, cellspacing=0, border=0>
  <tr>
    <td>Address:</td>
    <td><%= @building.address %></td>
  </tr>
  <tr>
    <td>City:</td>
    <td><%= @building.city %></td>
  </tr>
  <tr>
    <td>State:</td>
    <td><%= @building.state %></td>
  </tr>
  <tr>
    <td>Zip Code:</td>
    <td><%= @building.zip %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @building.description %></td>
  </tr>
  <tr>
    <td>Owner:</td>
    <% if @building.owner != nil %>
      <td><%= @building.owner.first_name %> <%= @building.owner.last_name %></td>
    <% else %>
      <td>None</td>
    <% end %>
  </tr>

</table>


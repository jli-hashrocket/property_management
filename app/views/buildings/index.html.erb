<h1>Property Management</h1>
<%= link_to "Add Building", new_building_path %> |
<%= link_to "Add Owner", new_owner_path %> |
<%= link_to "Go to Owners", owners_path %>


<table cellpadding=5, cellspacing=0, border=0>
  <thead>
    <td>Address</td>
    <td>City</td>
    <td>State</td>
    <td>Zip code</td>
    <td>Description</td>
    <td>Owner</td>
    <td>Actions</td>
  </thead>
  <% @buildings.each do |building| %>
    <tr>
      <td><%= building.address %></td>
      <td><%= building.city %></td>
      <td><%= building.state %></td>
      <td><%= building.zip %></td>
      <td><%= building.description %></td>
      <% if building.owner != nil %>
        <td><%= building.owner.first_name %> <%= building.owner.last_name %></td>
      <% else %>
        <td>None</td>
      <% end %>
      <td>
        <%= link_to 'Show', building_path(building) %> |
        <%= link_to 'Edit', edit_building_path(building) %> |
        <%= link_to 'Delete', building, method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

